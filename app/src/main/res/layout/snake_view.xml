<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/snake_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snake_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/snake_head"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/snake_body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snake_body" />

        <ImageView
            android:id="@+id/snake_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snake_tail" />

    </LinearLayout>

</RelativeLayout>
